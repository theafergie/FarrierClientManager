<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="{Binding FullName}"
    xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarrierClientManager.ClientDetail">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding FullName}"></Label>
            <Label Text="{Binding PhoneNumber}"></Label>
            <Label Text="{Binding Address}"></Label>
            <Label Text="{Binding City}"></Label>
            <Label Text="{Binding Zip}"></Label>
            <Label Text="{Binding County}"></Label>

            <ListView x:Name="clientDetail"
                      BindingContext="x:Reference ClientAdded">
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>