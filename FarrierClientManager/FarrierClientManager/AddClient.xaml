<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Add New"
    xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarrierClientManager.AddClient">
   
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="OnSave"></ToolbarItem>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        
        <TableView Intent="Form">
            <TableRoot>
                <TableSection Title="Contact Info" BindingContext="clientDetail">
                    <EntryCell x:Name="FirstName" Placeholder="First Name" ></EntryCell>
                    <EntryCell x:Name="LastName" Keyboard="Text" Placeholder="Last Name"></EntryCell>
                    <EntryCell x:Name="Address" Placeholder="Address"></EntryCell>
                    <EntryCell x:Name="City" Keyboard="Text" Placeholder="City"></EntryCell>
                    <EntryCell x:Name="Zip" Keyboard="Numeric" Placeholder="Zip"></EntryCell>
                    <EntryCell x:Name="County" Keyboard="Text" Placeholder="County"></EntryCell>
                    <EntryCell x:Name="PhoneNumber" Keyboard="Numeric" Placeholder="Phone Number"></EntryCell>
                </TableSection>
            </TableRoot>
        </TableView>

    </ContentPage.Content>
</ContentPage>